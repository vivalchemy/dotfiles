{
  // Appearance
  "icon_theme": "Catppuccin Mocha",
  "theme": "Catppuccin Mocha (Blur) [Heavy]",
  "ui_font_family": "Poppins",
  "ui_font_size": 15,
  "ui_font_weight": 500,
  "buffer_font_family": "JetBrainsMono Nerd Font",
  "buffer_font_size": 15,
  "scrollbar": {
    "show": "never"
  },
  "tab_bar": {
    "show": false
  },

  // Editor Features
  "vim_mode": true,
  "base_keymap": "VSCode",
  "cursor_blink": false,
  "relative_line_numbers": true,
  "linked_edits": true,
  "wrap_guides": [81],
  "diagnostics": {
    "button": true,
    "include_warnings": true,
    "lsp_pull_diagnostics": {
      "enabled": true,
      "debounce_ms": 250
    },
    "inline": {
      "enabled": true,
      "update_debounce_ms": 250,
      "padding": 4,
      "min_column": 0,
      "max_severity": null
    }
  },
  "indent_guides": {
    "enabled": true,
    "coloring": "indent_aware"
  },
  "hide_mouse": "on_typing_and_movement",

  // Features & Plugins
  "features": {
    "edit_prediction_provider": "supermaven"
  },

  // AI Agent Configuration
  "agent": {
    "inline_assistant_model": {
      "provider": "google",
      "model": "gemini-2.5-flash-lite-preview"
    },
    "always_allow_tool_actions": true,
    "model_parameters": [],
    "default_model": {
      "provider": "google",
      "model": "gemini-2.5-flash"
    }
  },
  "context_servers": {},

  // UI Panels & Layout
  "bottom_dock_layout": "left_aligned",
  "project_panel": {
    "dock": "right"
  },
  "toolbar": {
    "breadcrumbs": true,
    "quick_actions": true,
    "selections_menu": false
  },

  // Telemetry
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  }
}
